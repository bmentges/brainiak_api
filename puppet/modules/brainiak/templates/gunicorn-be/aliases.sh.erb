alias start-<%=aplicacao%>-<%=projeto%>='sudo <%=initscript%> start'
alias stop-<%=aplicacao%>-<%=projeto%>='sudo <%=initscript%> stop'
alias force-stop-<%=aplicacao%>-<%=projeto%>='sudo <%=initscript%> force-stop'
alias restart-<%=aplicacao%>-<%=projeto%>='sudo <%=initscript%> restart'
alias force-restart-<%=aplicacao%>-<%=projeto%>='sudo <%=initscript%> force-restart'
